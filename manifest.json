{
    "manifest_version": 3,
    "name": "Message Rewriter",
    "description": "Rewrite messages based on selected option",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "storage",
      "https://web.whatsapp.com/*"
    ],
    "options_ui": {
      "page": "options.html",
      "open_in_tab": true
    },
    "background.scripts": ["background.js"],
    "browser_action": {
      "default_icon": "icon.png"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "externally_connectable": {
      "matches": ["https://web.whatsapp.com/*"]
    }
  }
  