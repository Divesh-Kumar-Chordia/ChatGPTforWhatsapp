{
  "manifest_version": 2,
  "name": "Message Rewriter",
  "description": "Rewrite messages based on selected option",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "https://web.whatsapp.com/*"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png"
  }
}
